{
  "extends": "../tsconfig.json",
  "include": ["**/*.ts", "cypress.d.ts"],
  "exclude": ["../node_modules"],
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "types": ["node", "cypress", "@testing-library/cypress"],
    "isolatedModules": false,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../src/*"]
    }
  }
}
